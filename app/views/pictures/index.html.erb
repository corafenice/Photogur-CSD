  <div class="navbar">
    <div class="leftbar">

        <div class="logo">Photogur</div>
        <div class="pulldown"><i class="fas fa-chevron-down"></i></div>
        <div class="newpost"></div>

    </div>

    <div class="rightbar">
      <!-- <i class="fas fa-search"></i> -->
      <div class="nextright">
        <p class="userinfo">
              <% if current_user %>
                Signed in as <%= current_user.username %>. <%= link_to "Log out", sessions_path("current"), :method => :delete %>
              <% else %>
                <%= link_to "Log in", new_sessions_path %> or <%= link_to "Sign up", new_users_path %>
              <% end %>
            </p>
      </div>
      <div class="navright">
        Sign In
      </div>

    </div>
  </div>



    <div class="leftpane">
    </div>
    <div class="textcontainer">
