<div class="textcontainer comment-page">

<%= image_tag @comments.url %>
<% @comments.comments.each do |comment| %>
<div class="comments">
  <section><%= User.find(comment.user_id).username.capitalize %></section><br>
  <article><%= comment.usertext %></article><br>
</div>
<% end %>
<br><br>
<%= form_for @comment do |f| %>
<%= f.label "Comment" %>
<%= f.text_field :usertext %>
<%= f.submit %>
<% end %>
<%= link_to 'Back', pictures_path %>
</div>
