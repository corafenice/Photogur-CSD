<!DOCTYPE html>
<html>
  <head>
    <title>Photogur</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>
    <p class="userinfo">
          <% if current_user %>
            Signed in as <%= current_user.username %>. <%= link_to "Log out", sessions_path("current"), :method => :delete %>
          <% else %>
            <%= link_to "Log in", new_sessions_path %> or <%= link_to "Sign up", new_users_path %>
          <% end %>
        </p>

  </body>
</html>
